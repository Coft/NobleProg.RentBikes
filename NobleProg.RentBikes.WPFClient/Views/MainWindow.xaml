<Window x:Class="NobleProg.RentBikes.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NobleProg.RentBikes.WPFClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.ColumnSpan="2" Width="300" Height="50">Add station</Button>
        <Button Grid.Row="1" 
                Grid.Column="1" 
                Width="100" 
                Height="80">
            <StackPanel Orientation="Horizontal">
                <TextBlock>Modify</TextBlock>
                <TextBlock>station</TextBlock>
            </StackPanel>
        </Button>


    </Grid>
</Window>
